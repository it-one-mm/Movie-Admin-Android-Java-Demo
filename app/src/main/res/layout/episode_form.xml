<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/root_padding">

    <TextView
        android:id="@+id/tv_form_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD Episodes"
        android:textSize="@dimen/form_title"
        android:textColor="@color/colorAccent"
        android:gravity="center"/>

    <EditText
        android:id="@+id/et_ep_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="episode name..."/>

    <EditText
        android:id="@+id/et_ep_video_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Video link..."/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Series"/>

    <Spinner
        android:id="@+id/sp_series"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_epi_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:background="@color/colorAccent"
        android:textColor="#fff"
        />

</LinearLayout>