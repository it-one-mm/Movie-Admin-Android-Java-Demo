<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_add_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD Movie"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/form_title" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_save_movies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_save"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <EditText
        android:id="@+id/et_movie_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Movies Titles..."/>

    <EditText
        android:id="@+id/et_image_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Image Url..."/>

    <EditText
        android:id="@+id/et_video_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Video Link..."/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Genres"/>
    
    <Spinner
        android:id="@+id/sp_genres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>